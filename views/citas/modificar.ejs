<%- include ("../templates/encabezado")%>
<%- include ("../templates/menu")%>
<div class="container mt-5">
<form action="/editar" method="post">
    <div class="card">
        <div class="card-header">
            <h1>Modificar registros</h1>
        </div>
        <div class="card-body">
            <input type="hidden" name="id" value="<%= user.id%>">
            <input class="form-control mb-3" type="text" value="<%= user.nombre%>" name="nombre" id="nombre" placeholder="Nombre" autofocus required>
            <input class="form-control mb-3" type="text" value="<%= user.motivo%>" name="motivo" id="motivo" placeholder="Motivo" required>
            <input class="form-control mb-3" type="date" value="<%= user.fecha%>" name="fecha" id="fecha" placeholder="Fecha" required>
        </div>
        <div class="card-footer">
            <button type="submit" class="form-control btn btn-primary" > Modificar registros</button>
        </div>
    </div>
</form>
</div>
