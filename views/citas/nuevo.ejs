<div class="container mt-5">
<form action="/nuevacita" method="post">
    <div class="card">
        <div class="card-header">
            <h1>Nueva CIta</h1>
        </div>
        <div class="card-body">
            <input class="form-control mb-3" type="text" name="nombre" id="nombre" placeholder="Nombre" autofocus required>
            <input class="form-control mb-3" type="text" name="motivo" id="motivo" placeholder="Motivo" required>
            <input class="form-control mb-3" type="date" name="fecha" id="fecha" placeholder="Fecha" required >
        </div>
        <div class="card-footer">
            <button class="form-control btn btn-primary" type="submit"> Agendar cita</button>
        </div>
    </div>
</form>
</div>
